@model User

<form method="post" asp-controller="Home" asp-action="EditUserPage">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Profile</h2>
            
            <input type="hidden" value="@ViewBag.UserID" asp-for="profileID" />
            <input type="hidden" value="@ViewBag.Email" asp-for="Email" />
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="userImageLink"></label>
            <input asp-for="userImageLink" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Password">About You</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-arrow-clockwise"></i>  Save
        </button>
    </div>
</form>