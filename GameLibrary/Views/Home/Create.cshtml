@model Game
@* p=padding pb= padding bottom m=margin mt = margin top *@
<form asp-controller="Home" asp-action="Create" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Game
            </h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="error-messages"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Cost"></label>
            <input asp-for="Cost" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating" class="error-messages"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Image">Image Link</label>
            <input asp-for="Image" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Platform"></label>
            <input asp-for="Platform" class="form-control" />
            <span asp-validation-for="Platform" class="error-messages"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
            <span asp-validation-for="Genre" class="error-messages"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ESRB"></label>
            <input asp-for="ESRB" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">
            Create
        </button>
        <a asp-controller="Home" asp-action="GameLibrary" class="btn btn-secondary">Back to Games</a>
    </div>
</form>