@model Movie

<form method="post" asp-controller="Movie" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Movie</h2>
			<hr/>
		</div>
		<div class="mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Year"></label>
			<input asp-for="Year" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Rating"></label>
			<input asp-for="Rating" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Genre"></label>
			<input asp-for="Genre" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="MPARating"></label>
			<input asp-for="MPARating" class="form-control" />
		</div>
		<button type="submit" class="btn btn-primary">
			<i class="bi bi-arrow-repeat"></i>Update
		</button>
		
		<a asp-controller="Movie" asp-action="MultMovies" class="btn btn-secondary">
			Back to Movies
		</a>

	</div>
</form>