@model Movie  
@* p=padding pb= padding bottom m=margin mt = margin top *@ 
<form asp-controller="Movie" asp-action="Create" method="post" >
    <div class="border p-3 mt-4">         
        <div class="row pb-2">             
            <h2 class="text-primary">
                Create Movie
                </h2>             
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>         
            <div class="mb-3">             
                <label asp-for="Title"></label>             
                <input asp-for="Title" class="form-control" />             
                <span asp-validation-for="Title" class="error-messages" ></span>         
            </div>          
            <div class="mb-3">             
                <label asp-for="Year"></label>             
                <input asp-for="Year" class="form-control" />         
            </div>         
            <div class="mb-3">             
                <label asp-for="Rating"></label>             
                <input asp-for="Rating" class="form-control" />         
            </div>         
            <button type="submit" class="btn btn-primary">
                Create
                </button>         
                <a asp-controller="Movie" asp-action="MultMovies" class="btn btn-secondary">See Movies</a>     
            </div> 
</form>